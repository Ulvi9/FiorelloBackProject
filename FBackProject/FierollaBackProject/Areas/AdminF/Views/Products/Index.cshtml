@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    int count = 0;
    if (ViewBag.Page == null)
    {
        ViewBag.Page = 1;
    }
    {

    }
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category Table</h4>

            <div class="table-responsive ">
                <table class="table ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>
                               Image
                            </th>
                            <th>Product Name</th>
                            <td>Price</td>
                            <th>Count</th>
                            <td>Category</td>
                            <td>Setting</td>    
                            

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product item in Model)
                        {
                            count++;
                        <tr>
                            <th>@count</th>
                            <th>
                                <img src="~/img/@item.ImageName" width="50px" alt="Alternate Text" />
                            </th>
                            <th>@item.Title</th>
                            <td>@item.Price</td>
                            <th>@item.Count</th>
                            <td>@item.Category.Name.ToUpper()</td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                    <i class="mdi mdi-account-card-details"></i>
                                </a>
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                    <i class="mdi mdi-table-edit"> </i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>    
</div>
<div class="row justify-content-center d-flex">
    <nav aria-label="...">
        <ul class="pagination pagination-sm">
            @*<li class="page-item ">
            <a class="page-link" href="#" tabindex="-1">1</a>
        </li>*@
            @for (int i = 1; i <= ViewBag.Count; i++)
            {
                if (ViewBag.Page == i)
                {
                    <li class="page-item disabled">
                        <a class="page-link" asp-area="AdminF"
                           asp-controller="Products" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item ">
                        <a class="page-link" asp-area="AdminF"
                           asp-controller="Products" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }



            }


        </ul>
    </nav>
</div>


