
@model AppUser
@{
    ViewData["Title"] = "Detail";
}

    <div class="row mt-3">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@Model.Fullname</h2>
                    <h4 class="card-title">@Model.Email</h4>

                    <p>
                        User Activated- @Model.IsActivated
                    </p>
                    <p class=" text-danger"> Are you sure??</p>
                </div>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-dark mr-3">
           Go Back
        </a>
        <form method="post">
            @if (Model.IsActivated)
            {
                <input type="hidden" name="IsActivated" value="false" />
                <button asp-route-id="@Model.Id" class="btn btn-danger" type="submit">
                    Desabled
                </button>
            }
            else
            {
                { <input type="hidden" name="IsActivated" value="true" />
                    <button asp-route-id="@Model.Id" class="btn btn-success" type="submit">
                        Activated
                    </button>
                }
            }
        </form>
    </div>

