
@model AppUser
@{
    ViewData["Title"] = "Detail";
}

<div class="row mt-3">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">@Model.Fullname</h2>
                <h4 class="card-title">@Model.Email</h4>

                <p>
                    User Activated- @Model.IsActivated
                </p>
               
            </div>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-dark mr-3">
        Go Back
    </a>
    <div asp-validation-summary="ModelOnly" class=" text-danger">   </div>
    <form method="post">
       
            <input type="password" name="NewPassword" value="false" />
            <button class="btn btn-danger" type="submit">
               Change Password
            </button>
        
       
    </form>
</div>



