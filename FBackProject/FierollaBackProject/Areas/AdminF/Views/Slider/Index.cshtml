@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
}


<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider</h4>
            @if (Model.Count() < 5)
            {
                <a class="btn btn-success" asp-action="Create">Create Slider</a>
            }

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Slider Image</th>
                            <th>Setting</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Slider item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/img/@item.Image" style="width:150px; height:150px; border-radius: 0;" />
                                </td>
                                
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"> </i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>


                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

